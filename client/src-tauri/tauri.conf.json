{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "VoIPC",
  "version": "0.2.0",
  "identifier": "com.voipc.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "beforeBundleCommand": "bash ../bundle-libs.sh"
  },
  "app": {
    "windows": [
      {
        "title": "VoIPC",
        "width": 800,
        "height": 600,
        "minWidth": 640,
        "minHeight": 480,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libavcodec60",
          "libavformat60",
          "libavutil58",
          "libswscale7",
          "libturbojpeg",
          "libpipewire-0.3-0t64",
          "libgbm1",
          "libasound2t64"
        ]
      }
    }
  }
}
